@page
@model SellingSunsets.Pages.SalesOffices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Sales Offices</h1>

<h4>SalesOffice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
