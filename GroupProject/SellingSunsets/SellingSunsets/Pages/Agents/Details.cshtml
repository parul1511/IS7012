@page
@model SellingSunsets.Pages.Agents.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Agent Details</h1>

<div>
    <h4>Agent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.SalesOffice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.SalesOffice.SalesOfficeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.AgentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.AgentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.AgentPhNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.AgentPhNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.AgentAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.AgentAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.AgentEmailId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.AgentEmailId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.AgentDateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.AgentDateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.AgentRegistered)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Agent.AgentRegistered)
            {
                <span class="badge badge-warning">Yes</span>
            }
            else
            {
                <span class="badge badge-secondary">No</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.AgentSSN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.AgentSSN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agent.AgentSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agent.AgentSalary)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Agent.AgentId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@if (Model.Agent.Dwellings.Any() == false)
{
    <div class="alert alert-info">No Dwelling has been created. <a asp-page="/Dwellings/create">Create a Dwelling</a></div> }
else
{
    <h4>Dwellings</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Agent.Dwellings[0].DwellingName)</th>
                <th>@Html.DisplayNameFor(model => model.Agent.Dwellings[0].DwellingAddress)</th>
                <th>@Html.DisplayNameFor(model => model.Agent.Dwellings[0].DwellingArea)</th>
                <th>@Html.DisplayNameFor(model => model.Agent.Dwellings[0].DwellingNoOfOccupant)</th>
                <th>@Html.DisplayNameFor(model => model.Agent.Dwellings[0].DwellingRoom)</th>
                <th>@Html.DisplayNameFor(model => model.Agent.Dwellings[0].DwellingRegNo)</th>
                <th>@Html.DisplayNameFor(model => model.Agent.Dwellings[0].DwellingDateOfReg)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Agent.Dwellings)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DwellingName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DwellingAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.DwellingArea)</td>
                    <td>@Html.DisplayFor(modelItem => item.DwellingNoOfOccupant)</td>
                    <td>@Html.DisplayFor(modelItem => item.DwellingRoom)</td>
                    <td>@Html.DisplayFor(modelItem => item.DwellingRegNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.DwellingDateOfReg)</td>
                    <td><a asp-page="/Dwellings/details" asp-route-id="@item.DwellingId">Details</a></td>
                </tr>
}
        </tbody>
    </table>
}



<div>
    <a asp-page="./Edit" asp-route-id="@Model.Agent.AgentId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
