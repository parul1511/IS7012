@page
@model RecruitCatRanjanpl.Pages.Candidates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Candidate: @Html.DisplayFor(model => model.Candidate.FullName)</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Candidate.CandidateId" />
            <div class="form-group">
                <label asp-for="Candidate.CandidateFirstName" class="control-label"></label>
                <input asp-for="Candidate.CandidateFirstName" class="form-control" />
                <span asp-validation-for="Candidate.CandidateFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.CandidateLastName" class="control-label"></label>
                <input asp-for="Candidate.CandidateLastName" class="form-control" />
                <span asp-validation-for="Candidate.CandidateLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.TargetSalary" class="control-label"></label>
                <input asp-for="Candidate.TargetSalary" class="form-control" />
                <span asp-validation-for="Candidate.TargetSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.OptionalStartDate" class="control-label"></label>
                <input asp-for="Candidate.OptionalStartDate" class="form-control" />
                <span asp-validation-for="Candidate.OptionalStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.CandidateDOB" class="control-label"></label>
                <input asp-for="Candidate.CandidateDOB" class="form-control" />
                <span asp-validation-for="Candidate.CandidateDOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.CandidatePhoneNo" class="control-label"></label>
                <input asp-for="Candidate.CandidatePhoneNo" class="form-control" />
                <span asp-validation-for="Candidate.CandidatePhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.CompanyId" class="control-label"></label>
                <select asp-for="Candidate.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="Candidate.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.JobTitleId" class="control-label"></label>
                <select asp-for="Candidate.JobTitleId" class="form-control" asp-items="ViewBag.JobTitleId"></select>
                <span asp-validation-for="Candidate.JobTitleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.IndustryId" class="control-label"></label>
                <select asp-for="Candidate.IndustryId" class="form-control" asp-items="ViewBag.IndustryId"></select>
                <span asp-validation-for="Candidate.IndustryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
