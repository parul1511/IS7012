@page
@model RecruitCatRanjanpl.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Company.CompanyName)'s Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.PositionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.PositionName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.isFortune400Company)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Company.isFortune400Company)
            {
                <span class="badge badge-warning">Yes</span>
            }
            else
            {
                <span class="badge badge-secondary">No</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.NoOfEmployees)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.NoOfEmployees)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CandidateId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CandidateId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobTitle.Title)
        </dd>
    </dl>
</div>
@if(Model.Company.Candidate.Any())
{
<div>
    <h4>Candidate Details</h4>
    <table class="table table-bordered">
        <thread>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Company.Candidate[0].CandidateId)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidate[0].FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidate[0].CandidatePhoneNo)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidate[0].CandidateDOB)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidate[0].TargetSalary)</th>
                <th>@Html.DisplayNameFor(model => model.Company.Candidate[0].OptionalStartDate)</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var item in Model.Company.Candidate)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CandidateId)</td>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CandidatePhoneNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.CandidateDOB)</td>
                    <td>@Html.DisplayFor(modelItem => item.TargetSalary)</td>
                    <td>@Html.DisplayFor(modelItem => item.OptionalStartDate)</td>
                    <td>
                        <a asp-page="/Candidates/Details" asp-route-id="@item.CompanyId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (@Model.Company.Candidate.Count == 1)
    {
        <strong>@Model.Company.Candidate.Count Candidate Found</strong>
    }
    else
    {
        <strong>@Model.Company.Candidate.Count Candidates Found</strong>
    }

</div>
}
else
{
<div class="alert alert-warning">No Candidates exits for @Html.DisplayFor(model => model.Company.CompanyName).</div>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
